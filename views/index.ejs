    <% items.forEach((item)=>{ %>
      <form action="/delete" method="POST" role="form">
        <div class="item">
          <input type="checkbox" onchange="this.form.submit()" name="checkbox" value="<%= item._id %>">
          <input type="hidden" onchange="this.form.submit()" name="title" value="<%= day %>">
          <p>
            <%= item.name %>
          </p>
        </div>
      </form>
      <% }) %>

        <form action="/" method="post" class="item">
          <input type="text" name="ListName" placeholder="New Item" autocomplete="off">
          <button type="submit" name="list" value="<%= day %>">+</button>
        </form>

  </div>




</body>

</html>